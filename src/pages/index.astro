---
/**
 * Página principal de la invitación.
 * Aquí defines la fecha y ordenas las secciones.
 */
import BaseLayout from "../layout/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Historia from "../components/Historia.astro";
import Detalles from "../components/Detalles.astro";
import CeremoniaVenueRegalos from "../components/CeremoniaVenueRegalos.astro";
import Preguntas from "../components/Preguntas.astro";
import BoletoChecker from "../components/BoletoChecker.astro";

const weddingDate = "02 Mayo 2026";
---

<BaseLayout title="Estefany & Rubén · Nuestra boda">
  <!-- Foto del puente + padres + fecha -->
  <Hero weddingDate={weddingDate} />

  <!-- Nuestra historia -->
  <Historia />

  <!-- Pequeños detalles, gran día… -->
  <Detalles />

  <!-- Bloque negro con ceremonia, venue y mesas de regalo -->
  <CeremoniaVenueRegalos />

  <BoletoChecker />

  <!-- Preguntas frecuentes -->
  <Preguntas />

</BaseLayout>
